    "losses": {
        "0": {
            "type": "SiameseCrossEntropyLoss",
            "args": {
                "output_key": "thetas",
                "target_key": "targeted_id_labels",
                "nickname": "CrossEntropy",
                "weight": 1
            }
        },
        "1": {
            "type": "SiameseMSELoss",
            "args": {
                "output_key": "x_coses",
                "target_key": "targeted_cos",
                "nickname": "MSE",
                "weight": 1
            }
        }
    },
    "metrics": {
        "0": {
            "type": "VerificationMetric",
            "args": {
                "nickname": "verificationMetric",
                "output_key": "x_coses",
                "target_key": "is_same_labels",
                "num_of_folds": 10
            }
        }
    },
    "log_step": 1,
    "verbosity": 2,
    "name": "xcos_train_config"

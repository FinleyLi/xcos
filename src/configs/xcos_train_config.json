{
    "n_gpu": 1,
    "optimizers": {
        "default": {
            "type": "Adam",
            "args": {
                "lr": 0.001,
                "weight_decay": 0,
                "amsgrad": true
            }
        }
    },
    "lr_schedulers": {
        "default": {
            "type": "StepLR",
            "args": {
                "step_size": 5,
                "gamma": 0.9
            }
        }
    },
    "trainer": {
        "epochs": 100,
        "save_dir": "saved/",
        "save_freq": 1,
        "monitor": "valid_seen_loss",
        "monitored_metric": "avg_loss",
        "monitor_mode": "min",
        "monitored_loader":"lfw"
    },
    "trainer_args": {},
    "visualization": {
        "tensorboardX": true,
        "log_dir": "saved/runs"
    },
    "arch": {
        "type": "xCosModel",
        "args": {
            "class_num": 10572
        }
    },
    "data_loader": {
        "type": "FaceDataLoader",
        "args": {
            "data_dir": "../datasets/face/CASIA",
            "batch_size": 48,
            "validation_split": 0,
            "num_workers": 6,
            "name": "casia"
        }
    },
    "validation_strategy": "bypass_loss_calculation",
    "valid_data_loaders": {
        "1": {
            "type": "FaceBinDataLoader",
            "args": {
                "data_dir": "../datasets/face/faces_emore",
                "batch_size": 256,
                "shuffle": false,
                "validation_split": 0.0,
                "num_workers": 4,
                "name": "lfw"
            }
        },
        "2": {
            "type": "FaceBinDataLoader",
            "args": {
                "data_dir": "../datasets/face/faces_emore",

            }
        },
        "3": {
            "type": "FaceBinDataLoader",
            "args": {
                "data_dir": "../datasets/face/faces_emore",
                "batch_size": 256,
                "shuffle": false,
                "validation_split": 0.0,
                "num_workers": 4,
                "name": "agedb_30"
            }
        },
        "4": {
            "type": "FaceBinDataLoader",
            "args": {
                "data_dir": "../datasets/face/faces_emore",
                "batch_size": 256,
